{
  "name": "ts-template",
  "version": "0.0.1",
  "description": "一个使用rollup和typescript的类库编写模板",
  "main": "index.js",
  "module": "dist/ts-template.esm-bundler.js",
  "types": "dist/ts-template.d.ts",
  "private": false,
  "scripts": {
    "reset": "node scripts/reset.js",
    "build": "node scripts/build.js",
    "build:dts": "api-extractor run --local --verbose",
    "eslint": "eslint \"{src,scripts}/**/*.{ts,tsx,js}\" --fix",
    "prettier": "prettier --write \"{src,scripts}/**/*.{ts,tsx,json,js}\"",
    "test:tsc": "tsc -p tsconfig.json",
    "test:unit": "jest  --verbose -u",
    "lint": "npm run eslint && npm run prettier",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Wermdany/ts-template"
  },
  "homepage": "https://github.com/Wermdany/ts-template#readme",
  "bugs": {
    "url": "https://github.com/Wermdany/ts-template/issues"
  },
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "src/*",
    "CHANAGELOG.md",
    "README.md"
  ],
  "keywords": [
    "rollup",
    "typescript",
    "eslint",
    "template"
  ],
  "author": "Wermdany",
  "license": "MIT",
  "devDependencies": {
    "@commitlint/config-conventional": "^13.1.0",
    "@microsoft/api-extractor": "^7.18.9",
    "@rollup/plugin-alias": "^3.1.5",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@types/jest": "^27.0.1",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "chalk": "^4.1.2",
    "commitlint": "^13.1.0",
    "conventional-changelog-cli": "^2.1.1",
    "dotenv": "^10.0.0",
    "enquirer": "^2.3.6",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.1.2",
    "eslint-plugin-jest": "^24.4.2",
    "eslint-plugin-prettier": "^4.0.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.0",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "lint-staged": "^11.1.2",
    "minimist": "^1.2.5",
    "naming-style": "^1.0.1",
    "prettier": "^2.4.1",
    "rollup": "^2.56.3",
    "rollup-plugin-analyzer": "^4.0.0",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "npm run lint"
    ],
    "*.json": [
      "npm run prettier"
    ]
  }
}
